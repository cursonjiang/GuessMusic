<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/buytip_bg"
              android:gravity="center_horizontal">

    <TextView
        android:id="@+id/text_dialog_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示"
        android:textColor="@color/black"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/text_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:ignore="NewApi,RtlCompat,RtlSymmetry"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/btn_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@drawable/cancel_button_icon"
            tools:ignore="RtlCompat"/>

        <ImageButton
            android:id="@+id/btn_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ok_button_icon"
            tools:ignore="RtlCompat"/>

    </LinearLayout>

</LinearLayout>