<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <!-- 记录关卡-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        tools:ignore="UselessParent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/game_level_title"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/guanka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText"/>
    </FrameLayout>

    <!-- 左侧按钮-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <!-- 提示按钮-->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/buy1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buy1_button_icon"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="17dp"
                android:background="@mipmap/game_coin_icon"
                android:layout_marginStart="6dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="8dp"
                tools:ignore="RtlCompat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:text="30"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText,RtlCompat,SmallSp"/>
        </FrameLayout>

        <!-- 删除按钮-->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/buy2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buy2_button_icon"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="17dp"
                android:background="@mipmap/game_coin_icon"
                android:layout_marginStart="6dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="8dp"
                tools:ignore="RtlCompat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:text="30"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText,RtlCompat,SmallSp"/>
        </FrameLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/share"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/share_button_icon"
        tools:ignore="RtlCompat"/>

</RelativeLayout>